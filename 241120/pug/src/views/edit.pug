extends base.pug

block content 
  h4 change Title of Video
  form(method="POST")
    input(type="text" name="title" placeholder="Video Title" value=video.title required)
    input(type="text" name="descrption" placeholder="descrption" value=video.descrption required)
    input(type="text" name="hashtags" placeholder="hashtags, separated by comma." value=video.hashtags.join() required)
    input(type="submit" value="save")